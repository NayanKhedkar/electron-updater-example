{
  "name": "electron-updater-example",
  "version": "0.7.1",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Nayan Khedkar",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/NayanKhedkar/electron-updater-example.git"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder build --mac --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "build": {
    "appId": "com.example.ElectronAutoUpdate",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    }
  },
  "dependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0"
  },
  "devDependencies": {
    "electron-log": "^4.2.2",
    "electron-updater": "^4.3.1"
  }
}
